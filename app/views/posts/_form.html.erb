<div class="section">
<%= simple_form_for @post do |f| %>
  <div class="field">
    <div class="control">
      <%= f.input :title, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
    </div>
  </div>

  <div class="field">
    <div class="">
      <%= f.label :user_ids, 'Author(s)' %> <br/>
      <%= f.collection_select :user_ids, User.order(:name), :id, :name, {}, {multiple: true} %>
    </div>
  </div>

<br />

  <div class="field">
    <div class="control">
      <%= f.file_field :images, input_html: { class: 'images' }, wrapper: false, label_html: { class: 'images' }, multiple: true %>
    </div>
  </div>
  
  <div class="field">
    <div class="control">
      <%= f.input :content, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' }  %>
    </div>
  </div>
  <%= f.button :submit, 'Create new post', class: "button is-primary" %>
<% end %>
</div>